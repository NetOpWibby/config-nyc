{
  "author": {
    "name": "netop://ウエハ",
    "url": "https://webb.page"
  },
  "description": "Opinionated Istanbul configuration",
  "dependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "nyc": "^15.0.0",
    "source-map-support": "^0.5.16",
    "ts-node": "^8.6.2"
  },
  "devDependencies": {
    "@webb/config-prettier": "^2020.3.9",
    "chronver": "^2020.3.9",
    "del-cli": "^3.0.0",
    "husky": "^4.2.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "typescript": "^3.8.3",
    "updates": "^10.2.2"
  },
  "homepage": "https://code.webb.page/Webb/config-nyc",
  "husky": {
    "hooks": {
      "pre-commit": "npm run build && npm run pretty && npm run increment && git add -A :/"
    }
  },
  "license": "MIT",
  "main": "dist/index.js",
  "name": "@webb/config-nyc",
  "prettier": "@webb/config-prettier",
  "repository": {
    "type": "git",
    "url": "https://code.webb.page/Webb/config-nyc"
  },
  "scripts": {
    "build": "npm run cleanup && tsc",
    "cleanup": "del './dist'",
    "increment": "chronver --increment package",
    "pretty": "prettier --write 'dist/**/*.js' 'dist/**/*.ts'",
    "test": "run-s test:*",
    "test:dependencies": "updates --update ./",
    "test:typescript": "tsc"
  },
  "types": "dist/index.d.ts",
  "version": "2020.03.10"
}
